<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#1C1C1C"
tools:context=".MainActivity">

<Chronometer
android:id="@+id/chrono"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=""
android:textSize="32sp"
android:textStyle="bold"
android:layout_marginTop="32dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintVertical_bias="0.1"
android:layout_marginBottom="32dp"
app:layout_constraintBottom_toTopOf="@+id/instructionTextView"
android:textColor="#FFD700"
android:visibility="invisible"

    />

<TextView
android:id="@+id/instructionTextView"
android:layout_width="0dp"
android:layout_height="0dp"
android:gravity="center"
android:text="Mission confidentielle en cours..."
android:textSize="18sp"
android:textStyle="italic"
app:layout_constraintTop_toBottomOf="@+id/chrono"
app:layout_constraintBottom_toTopOf="@+id/beginButton"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:layout_marginTop="16dp"
android:layout_marginBottom="16dp"
android:textColor="#FFD700"
    />

<Button
android:id="@+id/beginButton"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Activer Mission"
android:background="@drawable/button_launch"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/instructionTextView"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:layout_marginBottom="32dp"
android:backgroundTint="#4CAF50"
android:textColor="#FFFFFF"
    />

    </androidx.constraintlayout.widget.ConstraintLayout>
